@{
    ViewData["Title"] = "Welcome to MicFx";
}

<div class="h-screen bg-background flex items-center justify-center p-4">
    <div class="max-w-md w-full space-y-8 text-center">
        <!-- Logo/Brand -->
        <div class="space-y-2">
            <div class="mx-auto w-12 h-12 bg-primary rounded-md flex items-center justify-center">
                <span class="text-sm font-bold text-primary-foreground">Mic</span>
            </div>
            <h1 class="text-3xl font-bold tracking-tight text-foreground">MicFx</h1>
            <p class="text-sm text-muted-foreground">OrchardCore + TailwindCSS Framework</p>
        </div>

        <!-- Success Badge -->
        <div class="inline-flex items-center gap-2 bg-green-50 text-green-700 px-3 py-1 rounded-full text-sm font-medium border border-green-200">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            Setup Complete
        </div>

        <!-- Main Content -->
        <div class="space-y-4">
            <h2 class="text-xl font-semibold text-foreground">Get started by editing your first page</h2>
            <p class="text-muted-foreground leading-relaxed">
                Your MicFx development environment is now ready. Start building amazing applications with OrchardCore's modular architecture and TailwindCSS styling.
            </p>
        </div>

        <!-- Feature List -->
        <div class="space-y-3">
            <div class="flex items-center gap-3 p-3 rounded-lg border bg-card">
                <div class="w-8 h-8 bg-blue-100 text-blue-600 rounded-md flex items-center justify-center">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                </div>
                <div class="text-left">
                    <p class="text-sm font-medium text-foreground">OrchardCore CMS</p>
                    <p class="text-xs text-muted-foreground">Modular content management</p>
                </div>
            </div>
            
            <div class="flex items-center gap-3 p-3 rounded-lg border bg-card">
                <div class="w-8 h-8 bg-cyan-100 text-cyan-600 rounded-md flex items-center justify-center">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"></path>
                    </svg>
                </div>
                <div class="text-left">
                    <p class="text-sm font-medium text-foreground">TailwindCSS</p>
                    <p class="text-xs text-muted-foreground">Utility-first CSS framework</p>
                </div>
            </div>
        </div>

        <!-- Action Button -->
        <button class="w-full bg-primary text-primary-foreground hover:bg-primary/90 px-4 py-2 rounded-md font-medium transition-colors">
            Start Building
        </button>

        <!-- Footer -->
        <p class="text-xs text-muted-foreground">
            Built with ❤️ using OrchardCore & TailwindCSS
        </p>
    </div>
</div>

<style>
    :root {
        --background: 0 0% 100%;
        --foreground: 222.2 84% 4.9%;
        --card: 0 0% 100%;
        --card-foreground: 222.2 84% 4.9%;
        --popover: 0 0% 100%;
        --popover-foreground: 222.2 84% 4.9%;
        --primary: 222.2 47.4% 11.2%;
        --primary-foreground: 210 40% 98%;
        --secondary: 210 40% 96%;
        --secondary-foreground: 222.2 84% 4.9%;
        --muted: 210 40% 96%;
        --muted-foreground: 215.4 16.3% 46.9%;
        --accent: 210 40% 96%;
        --accent-foreground: 222.2 84% 4.9%;
        --destructive: 0 84.2% 60.2%;
        --destructive-foreground: 210 40% 98%;
        --border: 214.3 31.8% 91.4%;
        --input: 214.3 31.8% 91.4%;
        --ring: 222.2 84% 4.9%;
        --radius: 0.5rem;
    }

    .dark {
        --background: 222.2 84% 4.9%;
        --foreground: 210 40% 98%;
        --card: 222.2 84% 4.9%;
        --card-foreground: 210 40% 98%;
        --popover: 222.2 84% 4.9%;
        --popover-foreground: 210 40% 98%;
        --primary: 210 40% 98%;
        --primary-foreground: 222.2 47.4% 11.2%;
        --secondary: 217.2 32.6% 17.5%;
        --secondary-foreground: 210 40% 98%;
        --muted: 217.2 32.6% 17.5%;
        --muted-foreground: 215 20.2% 65.1%;
        --accent: 217.2 32.6% 17.5%;
        --accent-foreground: 210 40% 98%;
        --destructive: 0 62.8% 30.6%;
        --destructive-foreground: 210 40% 98%;
        --border: 217.2 32.6% 17.5%;
        --input: 217.2 32.6% 17.5%;
        --ring: 212.7 26.8% 83.9%;
    }

    .bg-background { background-color: hsl(var(--background)); }
    .bg-card { background-color: hsl(var(--card)); }
    .bg-primary { background-color: hsl(var(--primary)); }
    .bg-primary\/90 { background-color: hsl(var(--primary) / 0.9); }
    .text-foreground { color: hsl(var(--foreground)); }
    .text-primary-foreground { color: hsl(var(--primary-foreground)); }
    .text-muted-foreground { color: hsl(var(--muted-foreground)); }
    .border { border-color: hsl(var(--border)); }
    .hover\:bg-primary\/90:hover { background-color: hsl(var(--primary) / 0.9); }
</style>